<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>融合天下运营管理中心</title>
    <link rel="stylesheet" href="css/base.css">
    <link rel="stylesheet" href="css/login.css">

</head>
<body>
    <img src="img/loginBg.png" class="loginBg"/>
    <div class="loginWarp">
        <div class="loginCont">
            <div class="loginHead"></div>
            <img src="img/loginLogo.png" class="loginLogo">
            <div class="loginDes">
                融合天下运营管理平台
            </div>
            <div class="loginLi">
                <i class="loginIco icoUser"></i>
                <input class="loginIpt iptUser" type="text" placeholder="用户名/手机号/邮箱" />
            </div>
            <div class="loginLi mgt15">
                <i class="loginIco icoPwd"></i>
                <input class="loginIpt iptPwd" type="password" placeholder="登录密码" />
            </div>
            <div class="loginLiwarp">
                <div class="loginLi liWidth227 lineB mglc1">
                    <i class="loginIco icoCode"></i>
                    <input class="loginIpt iptCode" type="text" placeholder="验证码" />
                </div>
                <img src="img/valiCode.png" alt="点击获取" class="valiCode" >
            </div>
            <a class="loginBtn mgt20">登录</a>
        </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/plugins/jquery.tips.js"></script>
    <script src="js/plugins/placeholder.js"></script>
    <script>
        $(function(){
            $(".loginBtn").click(function(){                    
                if($(".iptUser").val()===''){
                    $(".iptUser").tips({
                        side : 2,
                        msg : '请输入用户名',
                        bg : '#2a3a40',
                        time : 2
                    });
                    return false;
                };
                if($(".iptPwd").val()===''){
                    $(".iptPwd").tips({
                        side : 2,
                        msg : '请输入密码',
                        bg : '#2a3a40',
                        time : 2
                    });
                    tooltipShow(".tooltipPwd","请输入密码");
                    return false;
                };
                if($(".iptCode").val()===''){
                    $(".iptCode").tips({
                        side : 2,
                        msg : '请输入验证码',
                        bg : '#2a3a40',
                        time : 2
                    });
                    return false;
                };
                if($(".iptCode").val()==='11'){
                    if($(".iptUser").val()==='1'&&$(".iptPwd").val()==='1'){
                        window.location.href="index";
                    }else{
                        $(".iptUser").tips({
                            side : 2,
                            msg : '用户名或密码错误',
                            bg : '#2a3a40',
                            time : 2
                        });
                    };
                }else{
                    $(".iptCode").tips({
                        side : 2,
                        msg : '验证码错误',
                        bg : '#2a3a40',
                        time : 2
                    }); 
                }
            });
        })
    </script>
</body>
</html>